{
  "name": "@canvasflow/feed",
  "description": "This is canvasflow utility for processing feeds",
  "version": "0.0.15",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "keywords": [
    "rss",
    "atom",
    "feed"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/canvasflow/feed.git"
  },
  "bugs": {
    "url": "https://github.com/canvasflow/feed/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "npm run build && npm run --dry-run",
    "test": "vitest",
    "test:debug": "vitest --test-timeout=0 --no-file-parallelism",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts",
    "lint:watch": "watch-eslint",
    "coverage": "vitest --coverage",
    "coverage:ui": "vitest --coverage --ui",
    "commit": "cz",
    "prepare": "husky install",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "disableScopeLowerCase": false,
      "disableSubjectLowerCase": false,
      "maxHeaderWidth": 100,
      "maxLineWidth": 100
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.21",
    "@types/sanitize-html": "^2.16.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "cz-conventional-changelog": "^3.3.0",
    "cz-emoji": "^1.3.2-canary.2",
    "cz-git": "^1.11.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^16.1.0",
    "prettier": "3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4",
    "watch-eslint": "^1.1.0"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "volta": {
    "node": "20.19.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "fast-xml-parser": "^5.2.3",
    "himalaya": "^1.1.1",
    "luxon": "^3.6.1",
    "sanitize-html": "^2.17.0",
    "zod": "^3.25.67"
  }
}
